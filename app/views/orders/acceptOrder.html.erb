<link href="/css/echec.css" rel="stylesheet">
<% if flash[:new] %>
<div class="padding confirmation">
<div class="container">

  <div class="alert alert-success alert-common alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <i class="fa fa-check"></i>
    Vous êtes affecté à cette prestation !
  </div>

  <div class="confirms">
    <h2>Merci pour votre reponse</h2>
    Cocooning Spa vous remercie et vous souhaite de passer un agréable moment ! <br>
    À très vite. 
  </div>

</div>
</div>
<% end %>

<% if flash[:ready] %>
<div class="padding confirmation">
<div class="container">

  <div class="alert alert-info alert-common alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <i class="fa fa-info-circle" aria-hidden="true"></i>
    <span>Vous avez déjà pris cette commande !</span>
  </div>

  <div class="confirms">
    <h2>Merci pour votre reponse</h2>
    Cocooning Spa vous remercie et vous souhaite de passer un agréable moment ! <br>
    À très vite. 
  </div>

</div>
</div>
<% end %>

<% if flash[:oups] %>
<div class="padding confirmation">
<div class="container">

  <div class="alert alert-warning alert-common alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <i class="fa fa-frown-o" aria-hidden="true"></i>
    <span>Cette prestation est déjà prise par un autre prestataire !</span>
  </div>

  <div class="confirms">
    <h2>Merci pour votre reponse</h2>
    Cocooning Spa vous contactera pour d'autres propositions de prestations ! <br>
    À très vite. 
  </div>

</div>
</div>
<% end %>
