<!-- HOME GALLERY SECTION -->
<section>
  <div class="clearfix homeGalleryTitle">
    <div class="container">
      <div class="secotionTitle" ID="galerie">
        <h2 class="police_massage"><span>Galerie </span>Un aperçu de nos réalisations jacuzzi à domicile</h2>
      </div>
    </div>
  </div>
  <div class="container-fluid clearfix homeGallery">
    <div class="row">
      <div class="col-xs-12">
        <div class="filter-container isotopeFilters">
          <ul class="list-inline filter">
            <li class="active"><a href="#" data-filter=".tout">tout</a></li>
            <li><a href="#" data-filter=".ambiance">Nos Ambiances</a></li>
            <li><a href="#" data-filter=".extra">les extras</a></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="row isotopeContainer" id="container">
      <%for n_tout in (1..53) do%>
      <div class="col-sm-3 isotopeSelector tout">
        <div class="card">
          <div class="card-img">
            <ul class="list-inline">
              <li>
                <img class="img-full img-thumbnail" src="img/touts/tout<%=n_tout%>.jpg" alt="Image" >
                <div class="overlay-content">
                  <a href="img/touts/tout<%=n_tout%>.jpg"data-fancybox="images" >
                    <h5><i class="fa fa-plus" aria-hidden="true"></i> <br></h5>
                  </a>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <%end%> 

      <%for n_ambiance in (1..32) do%>

      <div class="col-sm-3 isotopeSelector ambiance">
        <div class="card">
          <div class="card-img">
           <ul class="list-inline">
            <li>
              <img class="img-full img-thumbnail" src="img/ambiances/ambiance<%=n_ambiance%>.jpg" alt="Image" >
              <div class="overlay-content">
                <a href="img/ambiances/ambiance<%=n_ambiance%>.jpg"data-fancybox="images" >
                  <h5><i class="fa fa-plus" aria-hidden="true"></i> <br></h5>
                </a>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <%end%> 

    <%for n_extra in (1..16) do%>

    <div class="col-sm-3 isotopeSelector extra">
      <div class="card">
        <div class="card-img">
         <ul class="list-inline">
          <li>
            <img class="img-full img-thumbnail" src="img/extras/extra<%=n_extra%>.jpg" alt="Image" >
            <div class="overlay-content">
              <a href="img/extras/extra<%=n_extra%>.jpg"data-fancybox="images" >
                <h5><i class="fa fa-plus" aria-hidden="true"></i> <br></h5>
              </a>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <%end%>        
</div>
<div class="lireBtn">
  <a style="position: absolute;" href="<%=spa_path%>" class="btn btn-common btn-full-round btn-theme" id="more">revenir en arrière</a>
</div>
</section>
